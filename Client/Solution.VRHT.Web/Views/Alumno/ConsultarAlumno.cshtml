<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    :: Consulta
                </header>
                <div id="desliz" style="height:20px;width:100%;background:#FE5722;cursor: pointer;text-align:center;color:black;"><i class="fa fa-angle-double-down"></i></div>

                <div class="panel-body" id="filter">
                    <div class="form-group col-md-6">
                        <label class="control-label col-md-4">Nombres: </label>
                        <div class="col-md-8">
                            <input class="form-control"></input>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label col-md-4">DNI: </label>
                        <div class="col-md-8">
                            <input class="form-control"></input>
                        </div>
                    </div>

                    <!--BUTTON-->
                    <div class="form-group col-md-12" style="text-align:center;">
                        <a class="btn btn-info" type="button" id="btnSearch" style="width:15%;margin-right: 15px;float: right;"><i class="fa fa-search"></i></a>
                        <a class="btn btn-info"
                           id="btnAdd"
                           style="width:15%;margin-right: 15px;float: right;">
                            <i class="fa fa-file"></i>
                        </a>
                    </div>

                </div>
            </section>

            




        </div>
    </div>
</div>

