<!--gritter css-->
<link rel="stylesheet" type="text/css" href="~/Scripts/gritter/css/jquery.gritter.css" />

<!--Select 2 css-->
<link href="~/Scripts/select2-3.5.2/select2.css" rel="stylesheet" />

<link href="~/Scripts/advanced-datatable/css/demo_page.css" rel="stylesheet" />
